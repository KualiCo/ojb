<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali</groupId>
    <artifactId>kuali</artifactId>
    <version>72</version>
  </parent>
  <groupId>org.kuali.db.ojb</groupId>
  <artifactId>db-ojb</artifactId>
  <version>1.0.4-patch6-SNAPSHOT</version>
  <name>ObJectRelationalBridge</name>
  <description>
    ObJectRelationalBridge (OJB) is an Object/Relational mapping tool that
    allows transparent persistence for Java Objects against relational
    databases.
  </description>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Kuali Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>
  <scm>
    <connection>scm:svn:https://test.kuali.org/svn/kul-ojb-1.0.4/trunk</connection>
    <developerConnection>scm:svn:https://test.kuali.org/svn/kul-ojb-1.0.4/trunk</developerConnection>
    <url>https://test.kuali.org/svn/kul-ojb-1.0.4/trunk</url>
  </scm>
  <properties>
    <!-- Remove this property as soon as the devs are comfortable with Maven 3 -->
    <kuali.site.plugin.version>2.0.1</kuali.site.plugin.version>
    <kuali.release.goals>clean</kuali.release.goals>
    <kuali.site.path>db/db-ojb/${project.version}</kuali.site.path>
    <kuali.site.download.path>org/kuali/db/ojb</kuali.site.download.path>
    <kuali.clover.generate.info.phase>none</kuali.clover.generate.info.phase>
    <kuali.clover.exclude.pattern.1>**/*.java</kuali.clover.exclude.pattern.1>
    <kuali.compile.target>1.5</kuali.compile.target>
    <kuali.compile.source>1.5</kuali.compile.source>
    <kuali.javadoc.report.2>javadoc</kuali.javadoc.report.2>
    <maven.test.skip>true</maven.test.skip>
  </properties>
